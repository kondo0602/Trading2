<h3>いいね件数:
  <%= item.likes.count %>
</h3>

<% if current_user %>
  <% if Like.find_by(item_id: item.id, user_id: current_user) %>
    <%= button_to 'いいねを取り消す', item_like_path(item_id:item.id, id: item.likes[0].id), remote: true, method: :delete, class: "btn btn-danger" %>
  <% else %>
    <%= button_to 'いいね', item_likes_path(item.id), remote: true, class: "btn btn-primary" %>
  <% end %>
<% end %>