<% provide(:title, @user.name) %>
  <div class="row">
    <aside class="col-md-3">
      <%= render 'shared/user_sidebar' %>
    </aside>
    <div class="col-md-9">
      <h2><%= @user.name %>が出品した商品一覧 (<%= @user.items.count %>)</h2>
      <% if @user.items.any? %>
        <%= will_paginate @items %>
        <ul class="itemindex">
          <%= render @items %>
        </ul>
        <%= will_paginate @items %>
      <% else %>
        <p>まだ出品している商品がありません。</p>
      <% end %>
    </div>
  </div>